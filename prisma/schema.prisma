// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String                   @id @default(uuid())
  name        String
  password    String
  mappings    Users_contest_mappings[]
  tasks       Tasks[]
  submissions Submissions[]
}

model Contest {
  id            String                   @id @default(uuid())
  title         String
  descriptions  String
  starting_time DateTime
  end_time      DateTime
  tasks         Tasks[]
  state         Int                      @default(0)
  mappings      Users_contest_mappings[]
}

model Users_contest_mappings {
  id String @id @default(uuid())

  user      User    @relation(fields: [userId], references: [id])
  userId    String
  contest   Contest @relation(fields: [contestId], references: [id])
  contestId String
}

model Submissions {
  id          String   @id @default(uuid())
  code        String
  submited_at DateTime @default(now())
  tasks       Tasks    @relation(fields: [tasksId], references: [id])
  tasksId     String
  User        User     @relation(fields: [userId], references: [id])
  response    String
  userId      String
  state       String
  Queue       Queue?
}

model Queue {
  id           String      @id @default(uuid())
  status       String      @default("Running")
  submission   Submissions @relation(fields: [submissionId], references: [id])
  submissionId String
  hqId         String      @unique
}

model Tasks {
  id           String        @id @default(uuid())
  title        String
  time_limit   Int
  memory_limit String
  description  String
  submissions  Submissions[]
  User         User          @relation(fields: [userId], references: [id])
  userId       String
  Contest      Contest       @relation(fields: [contestId], references: [id])
  contestId    String
}
